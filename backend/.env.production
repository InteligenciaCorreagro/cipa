# Configuración de Producción para Render
# IMPORTANTE: Estas variables se configuran en el dashboard de Render

# JWT Secret (se genera automáticamente en Render)
JWT_SECRET_KEY=CHANGE-THIS-IN-RENDER-DASHBOARD

# API Configuration
API_PORT=5000
DEBUG=False
FLASK_ENV=production

# Database Path (montado en disco persistente)
DB_PATH=./data/notas_credito.db

# CORS (permitir frontend de Render)
CORS_ORIGINS=https://cipa-frontend.onrender.com,https://correagro.com

# Email (opcional - configurar si se necesita)
# EMAIL_USERNAME=
# EMAIL_PASSWORD=
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587

# Security Headers
SECURE_HEADERS=True
